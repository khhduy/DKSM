@model DSKMCosmetic.ModelViews.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- breadcrumb-section start -->
<nav class="breadcrumb-section theme1 bg-lighten2 pt-110 pb-110">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <h2 class="title pb-4 text-dark text-capitalize">login & register</h2>
                </div>
            </div>
            <div class="col-12">
                <ol class="breadcrumb bg-transparent m-0 p-0 align-items-center justify-content-center">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Log in to your account
                    </li>
                </ol>
            </div>
        </div>
    </div>
</nav>
<!-- breadcrumb-section end -->
<!-- login area start -->
<div class="login-register-area pt-80 pb-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ms-auto me-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a href="/login.html" class="active">
                            <h4>login</h4>
                        </a>
                        <a href="/register.html">
                            <h4>register</h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <div asp-validation-summary="ModelOnly", class="text-danger"></div>
                                    <form asp-action="Login" method="post">
                                        <input asp-for="Email" name="Email" placeholder="Email" type="email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                        <input asp-for="Password" name="Password" placeholder="Password" type="password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <div class="button-box">
                                            <div class="login-toggle-btn">
                                                <input id="remember" type="checkbox" />
                                                <label for="remember">Remember me</label>
                                            </div>
                                            <button type="submit" class="btn btn-dark btn--md">
                                                <span>Login</span>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- login area end -->